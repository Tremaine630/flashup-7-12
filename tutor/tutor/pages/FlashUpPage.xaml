<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tutor.pages.FlashUpPage"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="False"
             Title="Flash Up!">


    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <RelativeLayout>
                    <StackLayout x:Name="mainFlashStack" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}">

                        <!--This is where the C# Code gets inputted-->

                    </StackLayout>
                </RelativeLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>